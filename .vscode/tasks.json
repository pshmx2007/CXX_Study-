{
// tasks.json 형식에 대한 설명서는 
    // https://go.microsoft.com/fwlink/?LinkId=733558을 참조하세요.
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-o",
                "${fileDirname}/test.out",
                "${file}",
                "${fileDirname}/global.cpp"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}